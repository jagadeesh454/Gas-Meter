@{
    ViewBag.Title = "Sparkline";
    ViewBag.pTitle = "Meter Analytics";
    ViewBag.pageTitle = "Charts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl-5">
        <img src="~/img/3.png" alt="Alternate Text" />
    </div>
    <div class="col-xl-7">
        <div class="text-center" dir="ltr">
            <h2 class=" mb-3">Gas meter reading </h2>
            <input class="knob" data-width="300" data-height="300" data-linecap=round
                   data-fgcolor="#f06292" value="60" data-skin="tron" data-angleoffset="180"
                   data-readonly=true data-thickness=".2" />
            <div>
                <h3> % Gas Remaining</h3>
            </div>                                                                                   
        </div>
    </div>
    
</div>

<!-- end row -->

@section scripts{
    <!-- jquery-knob -->
    <script src="~/assets/libs/jquery-knob/jquery.knob.min.js"></script>

    <script src="~/assets/js/pages/jquery-knob.init.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}